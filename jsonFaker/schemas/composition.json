{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Personne",
    "type": "object",
    "properties": {
      "nom": {
        "type": "string",
        "minLength": 3
      },
      "age": {
        "type": "integer",
        "minimum": 0
      },
      "sexe": {
        "type": "string",
        "enum": ["homme", "femme"]
      }
    },
    "required": ["nom", "age", "sexe"],
    "allOf": [
      {
        "not": {
          "properties": {
            "age": {
              "maximum": 150
            }
          }
        }
      },
      {
        "anyOf": [
          {
            "properties": {
              "sexe": {
                "const": "homme"
              }
            }
          },
          {
            "properties": {
              "age": {
                "minimum": 18
              }
            }
          }
        ]
      },
      {
        "oneOf": [
          {
            "properties": {
              "nom": {
                "pattern": "^[A-Z][a-z]+$"
              }
            }
          },
          {
            "properties": {
              "nom": {
                "pattern": "^[A-Z][a-z]+ [A-Z][a-z]+$"
              }
            }
          }
        ]
      }
    ]
  }